# Included by CMakeLists, edited by the build script
# (the version numbers are generated by the build script from the git current label)

# name of the slicer
set (SLIC3R_APP "Caribou")
set(SLIC3R_APP_NAME "${SLIC3R_APP}Slicer")
# Key fo the slicer, must only contains ascii chars and no spaces (be valid in all filesystems)
set(SLIC3R_APP_KEY "${SLIC3R_APP}Slicer")
# exe name of the slicer
set(SLIC3R_APP_CMD "${SLIC3R_APP}Slicer")
# versions
set(SLIC3R_VERSION "2.5.59")
set(SLIC3R_VERSION_FULL "2.5.59.8")
set(SLIC3R_GITBUILD_NR "20727")
set(SLIC3R_BUILD_ID "${SLIC3R_APP_KEY}_${SLIC3R_VERSION_FULL}_2024-02-15")
set(SLIC3R_RC_VERSION "2,5,59,8")
set(SLIC3R_RC_VERSION_DOTS "${SLIC3R_VERSION_FULL}")

# Same as the slicer name but for gcodeviewer
set(GCODEVIEWER_APP_NAME "${SLIC3R_APP} G-code Viewer")
set(GCODEVIEWER_APP_KEY "${SLIC3R_APP}GcodeViewer")
set(GCODEVIEWER_APP_CMD "${SLIC3R_APP}GcodeViewer")

# string to be added after the SLIC3R_APP_NAME on some places
set(SLIC3R_BASED_ON " based on SuperSlicer and PrusaSlicer")
# to get he github repo
set(SLIC3R_GITHUB "Caribou3d/CaribouSlicer")
# download url
set(SLIC3R_DOWNLOAD "https://github.com/Caribou3d/CaribouSlicer/releases")
set(SLIC3R_DOC_URL "https://manual.slic3r.org/")
